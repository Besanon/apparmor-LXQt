abi <abi/4.0>,

#include <tunables/global>

@{exec_path} = @{bin}/screengrab
profile screengrab @{exec_path} flags=(complain) {
  include <abstractions/base>
  include <abstractions/bus-accessibility>
  include <abstractions/consoles>
  include <abstractions/graphics>
  include <abstractions/fontconfig-cache-read> 
  include <abstractions/lxqt>
  include <abstractions/nameservice-strict>
  include <abstractions/thumbnails-cache-read>
  include <abstractions/user-write-strict>
  include <abstractions/user-read-strict>

  ptrace readby peer=dbus-accessibility,
  ptrace readby peer=systemd-journald,
    
  @{exec_path}				mr,

  @{bin}/lximage-qt rPx,

  @{open_path} rPx -> child-open-help,

  /etc/machine-id r,
  /etc/xdg/menus/lxqt-config.menu  		r,

  /usr/share/desktop-directories/lxqt-* 	r,
  /usr/share/screengrab/** rw,

  @{lib}/qt6/plugins/{,**} r,
  @{lib}/qt6/plugins/imageformats/libq*.so mr,
  @{lib}/qt6/plugins/platforms/libqxcb.so mr,
  @{lib}/qt6/plugins/platformthemes/libqtlxqt.so mr,
  @{lib}/qt6/plugins/platforminputcontexts/libcomposeplatforminputcontextplugin.so mr,
  @{lib}/libproxy/libpxbackend-1.0.so mr,

  owner @{user_config_dirs}/lxqt-mimeapps.list	r,
  owner @{user_config_dirs}/QtProject.conf 	r,
  owner @{user_config_dirs}/screengrab/ rw,

  owner @{user_config_dirs}/screengrab/#@{int} rwk,
  owner @{user_config_dirs}/screengrab/screengrab.conf 		rw,
  owner @{user_config_dirs}/screengrab/screengrab.conf l -> @{user_config_dirs}/screengrab/#@{int},
  owner @{user_config_dirs}/screengrab/screengrab.conf.lock     rwk,
  owner @{user_config_dirs}/screengrab/screengrab.conf.@{rand6} rwk, 
  owner @{user_config_dirs}/lxqt/lxqt-config.conf.lock 		rwk,
  owner @{user_config_dirs}/screengrab/screengrab.conf.@{rand6} l -> @{user_config_dirs}/screengrab/#@{int},
  owner @{user_config_dirs}/qterminal.org/qterminal.ini 	r,

  @{sys}/bus/ 							r,
  @{sys}/class/ 						r,
  @{sys}/class/i2c-adapter/ 					r,
  @{sys}/devices/@{pci_bus}/{,**}  				r,
  @{sys}/devices/system/cpu/cpufreq/policy0/cpuinfo_max_freq 	r,

  owner @{PROC}/@{pid}/mountinfo				r,
  owner @{PROC}/@{pid}/mounts 					r,

  /tmp/ r,
  owner /tmp/qipc_* rw,
  owner /tmp/screenshot-@{rand8}.jpg rw,
  owner /tmp/user-screengrab-3.1.0 rw,

  /dev/tty 					r,
  owner /dev/tty@{u8} 				rw,

  include if exists <local/screengrab>
}

# vim:syntax=apparmor
