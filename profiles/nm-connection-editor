abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{bin}/nm-connection-editor
profile nm-connection-editor @{exec_path} flags=(attach_disconnected, complain) {
  include <abstractions/dconf-write>
  include <abstractions/base>
  include <abstractions/app/bwrap-glycin>
  include <abstractions/bus-system>
  include <abstractions/dbus-strict>
  include <abstractions/fonts>
  include <abstractions/graphics>
  include <abstractions/freedesktop.org>
  include <abstractions/bus/system/org.freedesktop.NetworkManager>
  include <abstractions/fontconfig-cache-read>
  include <abstractions/qt6>
  include <abstractions/nameservice-strict>
  include <abstractions/openssl>
  include <abstractions/ssl_certs>

  signal (receive) set=(kill,term) peer=lxqt-session,
  signal (send) peer=glycin//&glycin//loaders//&nm-connection-editor,

  network inet stream,

  dbus receive bus=system path=/org/freedesktop/NetworkManager/ActiveConnection/@{int}
       interface=org.freedesktop.NetworkManager.Connection.Active
       member=StateChanged
       peer=(name=:*, label=NetworkManager),

  dbus send bus=system path=/org/freedesktop/NetworkManager/Settings/@{int}
       interface=org.freedesktop.NetworkManager.Settings.Connection
       member=GetSettings
       peer=(name=:*, label=NetworkManager),

  @{exec_path} mr,

  @{lib}/glycin-loaders/@{d}+/glycin-*  Px -> nm-connection-editor//&glycin//&glycin//loaders,
  @{bin}/bwrap           rix,
  
  /usr/share/sounds/freedesktop/index.theme r,
  /usr/share/p11-kit/modules/ r,
  /usr/share/applications/ r,
  /usr/share/p11-kit/modules/p11-kit-trust.module r,
  /usr/share/gvfs/remote-volume-monitors/ r,
  /usr/share/gvfs/remote-volume-monitors/udisks2.monitor r,
  /usr/share/X11/xkb/{,**} r,
  /usr/share/gtk-3.0/settings.ini r,
  /usr/share/themes/{,**} r,
  /usr/share/xkeyboard-config-2/{,**} r,

  /etc/udev/udev.conf r,
  /etc/pulse/client.conf r,
  /etc/pkcs11/pkcs11.conf r,
  /etc/machine-id r,
  /etc/fstab r,

  /var/lib/dbus/machine-id r,

  owner @{HOME}/.Xdefaults r,

  owner @{user_cache_dirs}/glycin/ r,
  owner @{user_cache_dirs}/glycin/** rw,
  owner @{user_config_dirs}/pulse/cookie rwk,  
  owner @{user_config_dirs}/pulse/ rw,
  owner @{user_config_dirs}/ibus/bus/ r,
  owner @{user_config_dirs}/ibus/bus/{,**} r,
  owner @{user_config_dirs}/user-dirs.dirs r,
  owner @{user_config_dirs}/gtk-3.0/{,**} r,
  
  owner @{user_cache_dirs}/event-sound-cache.tdb.@{hex32}.@{multiarch}  rwk,
  owner @{user_cache_dirs}/event-sound-cache.tdb.host.@{multiarch} rwk,
  owner @{user_share_dirs}/ r,
  owner @{user_share_dirs}/recently-used.xbel r,
  owner @{user_share_dirs}/sddm/wayland-session.log w,
  owner @{user_share_dirs}/sddm/xorg-session.log rw,

  owner /tmp/xauth_@{rand6}  rw,
  owner /tmp/gdk-pixbuf-glycin-tmp.@{rand6} rw,

  owner @{run}/user/@{uid}/pulse/ rw,

  @{sys}/devices/@{pci_bus}/0000:00:0@{int}.1/0000:0@{int}:00.0/*   r,
  @{sys}/fs/cgroup/user.slice/user-@{uid}.slice/session-@{int}.scope/cpu.max r,
  @{sys}/fs/cgroup/user.slice/user-@{uid}.slice/cpu.max r,
  @{sys}/fs/cgroup/user.slice/cpu.max r,
  @{sys}/fs/cgroup/@{int}/cpu.max r,
  
  owner @{PROC}/@{pid}/fd/ r,
  owner @{PROC}/@{pid}/mountinfo r,
  owner @{PROC}/@{pid}/cgroup r,
  @{PROC}/sys/kernel/overflowuid r,

  /dev/dri/card@{int}  rw,
  /dev/shm/ r,
  owner /dev/tty@{u8} rw,

  include if exists <local/nm-connection-editor>
}

# vim:syntax=apparmor
