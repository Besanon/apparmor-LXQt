abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{bin}/lxqt-notificationd
#profile lxqt-notificationd @{exec_pathlx112} flags=(attach_disconnected, complain) {
  include <abstractions/base>
  include <abstractions/bus-accessibility>
  include <abstractions/consoles>
  include <abstractions/graphics>
  include <abstractions/lxqt>
  include <abstractions/fontconfig-cache-read>
  include <abstractions/nameservice-strict>
  
  ptrace (read) peer=lxqt-panel,

  #aa:dbus own bus=session name=org.kde.StatusNotifierWatcher
  #aa:dbus own bus=session name=org.freedesktop.Notifications

  @{exec_path}					mr,

  @{bin}/lxqt-config-notificationd rPx,

  /usr/share/hplip/{,**} r,
  
  owner @{user_cache_dirs}/lxqt-notificationd/#@{int} 	rwk,
  owner @{user_cache_dirs}/lxqt-notificationd/unattended.list rwk,
  owner @{user_cache_dirs}/lxqt-notificationd/unattended.list l -> @{user_cache_dirs}/lxqt-notificationd/#*,
  owner @{user_cache_dirs}/lxqt-notificationd/unattended.list.@{rand6} rwkl -> @{user_cache_dirs}/lxqt-notificationd/#@{int},
  owner @{user_cache_dirs}/lxqt-notificationd/unattended.list.lock rwk,

  owner @{user_config_dirs}/lxqt/notifications.conf rw,
  owner @{user_config_dirs}/lxqt/globalkeyshortcuts.conf.@{rand6} rwkl -> @{user_config_dirs}/lxqt/#@{int},

  owner /tmp/@{int}  					r,

  /dev/tty						rw,
  owner /dev/tty@{int} rw,		

  include if exists <local/lxqt-notificationd>
}

# vim:syntax=apparmor
